<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="border-radius: 20px;">
      <div class="modal-header text-center">
        <h5 class="modal-title" id="exampleModalLabel" style="margin-bottom: -2rem;"><%= image_tag('logo.png', class:"logo-nav") %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body">
          <div class="container-fluid text-center">
            <div class="row">
              <div class="col-md-12 modal-title greened">Connectez vous sur votre espace Soguide !</div>
              <div class="col-md-12">

                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs" style="padding:2rem">
                    <%= f.label :email, "Mail d'identifiant", class:"modal-title" %>
                    <%= f.input :email, required: false, autofocus: true, label: false %>
                    <%= f.label :password, "Mot de passe", class:"modal-title" %>
                    <%= f.input :password, required: false, label: false %>
                    <div class="col-md-6">
                      <%= f.label :remember_me, "Se rappeler de moi", class:"modal-title" %>
                    </div>
                    <div class="col-md-6">
                      <%= f.input :remember_me, label: false, as: :boolean if devise_mapping.rememberable? %>
                    </div>
                  </div>

                    <div class="col-md-6 padded flexed-center">
                    <%= f.button :submit, "Se connecter", class:"btn-first" %>
                    </div>
                    <div class="col-md-6 padded flexed-center">
                    <div class="btn-first">
                      <%- if devise_mapping.omniauthable? %>
                        <%- resource_class.omniauth_providers.each do |provider| %>
                      <%= link_to "Facebook", omniauth_authorize_path(resource_name, provider) %>
                      <% end -%>
                    </div>
                    </div>

                <% end %>
                <div class="padded" style="margin-top: 2rem"></div>
                <div class="col-md-6 padded flexed-center">
                  <button class="btn-first">
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <%= link_to "Creer un compte", new_registration_path(resource_name) %><br />
                    <% end -%>
                  </button>
                </div>
                <div class="col-md-6 padded flexed-center">
                  <button class="btn-first">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Mot de passe oublié ? ", new_password_path(resource_name) %><br />
                    <% end -%>
                  </button>
                </div>
                <% end -%>
                <p>Pour déposer un commentaire ou contacter un guide, il est necessaire d'être connecté.</p>
              </div>

            </div>
          </div>
        </div>
    </div>
  </div>
</div>
